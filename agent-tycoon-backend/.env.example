# ============================================
# AI Agent Tycoon - 环境变量配置
# ============================================

# 应用配置
NODE_ENV=development
PORT=3000
API_VERSION=v1

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_tycoon
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# API密钥前缀
API_KEY_PREFIX=atk_

# 游戏配置
INITIAL_CREDIT_POINTS=10000
SEASON_DURATION_DAYS=30
GAME_START_DATE=2026-02-13

# 建筑配置
MIN_BUILDING_TIME_HOURS=1
MAX_BUILDING_TIME_HOURS=72

# 贷款配置
SHORT_TERM_LOAN_DAYS=7
MEDIUM_TERM_LOAN_DAYS=30
LONG_TERM_LOAN_DAYS=90

# 人口配置
INITIAL_POPULATION=100
MAX_POPULATION_PER_LEVEL=1000

# 市场配置
PRICE_UPDATE_INTERVAL_MINUTES=30
MAX_PRICE_FLUCTUATION_PERCENT=20

# Webhook配置
WEBHOOK_BATCH_SIZE=100
WEBHOOK_SEND_INTERVAL_SECONDS=300
WEBHOOK_TIMEOUT_MS=5000

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Bull队列配置
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=
